{
  "name": "ice-cbp-translation-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:github": "GITHUB_PAGES=true vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build:github && gh-pages -d dist",
    "lighthouse": "npm run build && lhci autorun --config=./lighthouserc.cjs",
    "lighthouse:ci": "lhci autorun --config=./lighthouserc.cjs",
    "lighthouse:routes": "node scripts/lighthouse-routes.mjs",
    "lighthouse:test": "node scripts/test-lighthouse.mjs",
    "lighthouse:open": "npm run build && lhci autorun --config=./lighthouserc.cjs && open ./lighthouse-results/index.html",
    "accessibility:test": "node scripts/accessibility-test.mjs",
    "accessibility:report": "npm run build && axe --dir dist --tags wcag2a,wcag2aa,section508 --save axe-report.json",
    "accessibility:ci": "node scripts/accessibility-test.mjs"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@vitejs/plugin-react": "^4.6.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.20.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@eslint/js": "^9.9.1",
    "@lhci/cli": "^0.15.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.18",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "chrome-launcher": "^1.2.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "gh-pages": "^6.3.0",
    "globals": "^15.9.0",
    "lighthouse": "^12.6.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.36.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.0.0"
  }
}
